{
  "name": "customer-project-default",
  "version": "6.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "nohoist": ["**/react-router", "**/react-router-dom"],
  "scripts": {
    "clean": "rimraf **/node_modules",
    "start": "cd packages/app && yarn start",
    "build": "cd packages/app && yarn build",
    "test": "cd packages/app && yarn test",
    "format": "prettier --write \"**\"",
    "lint": "eslint src --ext .js",
    "precommit": "lint-staged"
  },
  "resolutions": {
    "**/@kineticdata/bundle-components": "6.x",
    "webpack": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/runtime": "^7.20.1",
    "@craco/craco": "^7.0.0",
    "@types/jest": "^25.2.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "husky": "^0.14.3",
    "inquirer": "^7.0.0",
    "jest": "^27.4.3",
    "jest-environment-jsdom": "^27.4.3",
    "jest-immutable-matchers": "^3.0.0",
    "lint-staged": "^7.1.3",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "path-browserify": "^1.0.1",
    "prettier": "~1.13.3",
    "react-addons-test-utils": "^15.6.2",
    "react-scripts": "^5.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "stylelint": "^14.15.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^5.0.0"
  },
  "lint-staged": {
    "**": [
      "prettier --write",
      "git add"
    ]
  }
}
